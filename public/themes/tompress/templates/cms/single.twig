{% extends "layouts/base.twig" %}

{% block content %}


	<div class="blog-single">
		<div class="row">
			<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
	
				<section class="article-content">
					<div class="article-body">
						{{ post.content }}
					</div>
				</section>
			</article>
		</div>
		<div class="col-lg-4 col-sm-12">
			<div id="sidebar">
				{{ sidebar }}
			</div>
		</div>

	</div>
{% endblock %}
